@model IEnumerable<WebApplication1.Models.Playlist>

@{
    ViewData["Title"] = "Playlists";
}

<p>The list of playlists</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TracksCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@item.Img" alt="Playlist Image" width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TracksCount)
            </td>
            <td>
                <form asp-controller="Playlists" asp-action="AddTrack" asp-route-id="@item.Id">
                    <input type="submit" value="Add Track" class="btn btn-primary" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>


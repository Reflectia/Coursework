@model IEnumerable<WebApplication1.Models.Track>

@{
    ViewData["Title"] = "Artists";
}

<h1>@ViewData["Title"]</h1>

<p>The list of artists with saved songs</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subtitle)
            </th>
            <th>
                Tracks count
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Background)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @{
        int i = 0;
    }
    @foreach (var item in Model) {  
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subtitle)
            </td>
            <td>
                @{
                    <div>@Constants.tracksCount[i].ToString()</div>
                    i++;
                }
            </td>
            <td>
                <img src="@item.Background" alt="Artist Image" width="100" height="100"/>
            </td>   
            <td>                
                <a asp-action="ArtistDetails" asp-route-id="@item.Subtitle">Details</a> 
            </td> 
        </tr>
    }
    </tbody>
</table>
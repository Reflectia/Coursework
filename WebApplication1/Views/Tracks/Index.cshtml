@model IEnumerable<WebApplication1.Models.Track>

@{
    ViewData["Title"] = "All Tracks";
}

<h1>All Tracks</h1>

<p>The list of all tracks</p>

<form asp-controller="Tracks" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtitle)
            </th>
            <th>
                Audio
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Background)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coverart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {  
        Uri uri = new Uri(item.Uri);
        string videoid = uri.Segments.Last();
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtitle)
            </td>
            <td>
                <div class="hideblock"></div>
                <img src="https://cdn4.iconfinder.com/data/icons/eldorado-player/40/symbol_play_1-1024.png" class="button" loading="lazy">     
                <iframe loading="lazy" title="Music audio" width="350" height="170" src="@item.Uri?modestbranding=1&showinfo=0&fs=0" frameborder="0"></iframe>                  
            </td>
            <td>
                 <img src="@item.Background" alt="Artist Image" width="300" height="300"/>
            </td>
            <td>
                <img src="@item.Coverart" alt="Track Image" width="300" height="300"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres)
            </td>
            <td>                
                <a asp-action="GetLink" asp-route-id="@videoid">Download Link</a>
                <br>
                <a asp-action="Edit" asp-route-id="@item.Key">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Key">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Key">Delete</a>
            </td>  
        </tr>
    }
    </tbody>
</table>
